<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".sample.UtilActivity">

    <Button
            android:id="@+id/btn_general"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="普通dialog"
            android:textSize="15sp"
            android:textColor="@drawable/select_txt_white_black"
            android:background="@drawable/select_bg_blue_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btn_purple"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="目标dialog"
            app:layout_constraintLeft_toLeftOf="@+id/btn_general"
            app:layout_constraintTop_toBottomOf="@+id/btn_general"
            android:textSize="15sp"
            android:textColor="@drawable/select_txt_white_black"
            android:background="@drawable/select_bg_blue_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
</android.support.constraint.ConstraintLayout>